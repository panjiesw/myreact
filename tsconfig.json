{
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"declaration": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"jsx": "react",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false,
	"awesomeTypescriptLoaderOptions": {
		"useCache": true,
		"useBabel": true
	}
}
