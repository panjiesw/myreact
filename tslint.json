{
	"extends": [
		"tslint:latest",
		"tslint-react"
	],
	"rules": {
		"max-line-length": [
			true,
			120
		],
		"quotemark": [
			true,
			"single"
		],
		"indent": [
			true,
			"tabs"
		],
		"variable-name": [
			true,
			"allow-leading-underscore",
			"allow-trailing-underscore",
			"allow-pascal-case"
		],
		"ordered-imports": [
			false
		],
		"object-literal-sort-keys": false,
		"jsx-no-multiline-js": [
			false
		],
		"jsx-boolean-value": [
			false
		]
	},
	"jsRules": {
		"max-line-length": [
			true,
			120
		],
		"quotemark": [
			true,
			"single"
		],
		"indent": [
			true,
			"tabs"
		],
		"variable-name": [
			true,
			"allow-leading-underscore",
			"allow-trailing-underscore",
			"allow-pascal-case"
		],
		"ordered-imports": [
			false
		],
		"object-literal-sort-keys": false,
		"jsx-no-multiline-js": [
			false
		],
		"jsx-boolean-value": [
			false
		],
		"no-unused-expression": true
	},
	"defaultSeverity": "warning"
}
